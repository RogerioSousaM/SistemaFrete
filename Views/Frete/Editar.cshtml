@model ProvaPratica.Models.Frete

@{
    ViewData["Title"] = "Editar Frete";
}

<h2>Editar Frete</h2>

<form asp-action="Editar" method="post">
    <div class="form-group">
        <label>Distância (km)</label>
        <input type="number" name="Distancia" class="form-control" value="@Model.Distancia" />
    </div>
    <div class="form-group">
        <label>Veículo</label>
        <select name="VeiculoId" class="form-control">
            @foreach (var veiculo in ViewBag.Veiculos)
            {
                <option value="@veiculo.Value" selected="@(veiculo.Value == Model.VeiculoId.ToString())">@veiculo.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Usuário</label>
        <select name="UsuarioId" class="form-control">
            @foreach (var usuario in ViewBag.Usuarios)
            {
                <option value="@usuario.Value" selected="@(usuario.Value == Model.UsuarioId.ToString())">@usuario.Text</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Voltar</a>
</form>