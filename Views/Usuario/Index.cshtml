@model IEnumerable<ProvaPratica.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuários";
}

<h2>Lista de Usuários</h2>

<p>
    <a href="@Url.Action("Criar")" class="btn btn-primary">Criar Novo Usuário</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Email</td>
                <td>
                    <a href="@Url.Action("Editar", new { id = item.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Deletar", new { id = item.Id })" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
