@model ProvaPratica.Models.Login

@{
    var returnUrl = "";
    ViewBag.Subtitulo = " Logar";
    if(Context.Request.Query.ContainsKey("returnUrl"))
    {
        returnUrl = Context.Request.Query["returnUrl"].ToString();
    }
}

@{
    ViewData["Title"] = "Logar";
}

<div asp-validation-summary="ModelOnly" class="validation-summary text-danger mb-3"></div>



<div class="row">
    <form action="Login" class="col-4 mb-3">
        <input type="hidden" name="ReturnUrl" id="ReturnUrl" value="@returnUrl">
        <div class="form-group mb-3">
            <label asp-for="@Model.Usuario"></label><br>
            <input asp-for ="@Model.Usuario" class="form-control" autofocus autocomplete="off">
            <span asp-validation-for="@Model.Usuario" class="text-danger"></span>
        </div>
        <div class="w-100"></div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Senha"></label><br>
            <input asp-for="@Model.Senha" class="form-control">
            <span asp-validation-for="@Model.Senha" class="text-danger"></span>
        </div> 
        <div class="w-100"></div>
        <div class="form-group">
            <div class="form-check">
                <input asp-for="@Model.Lembrar" class="form-check-input">
                <label asp-for="@Model.Lembrar" class="form-check-label"></label><br>
                <span asp-validation-for="@Model.Lembrar" class="text-danger"></span>
            </div>
        </div> 
        <div class="w-100"></div>
        <div class="mt-3">
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary btn-lg">Voltar</a>
            <button class="btn btn-primary btn-lg" type="submit">Entrar</button>
        </div> 
    </form>
    <p>
        Criar cadastro <a asp-action="Criar">Clique aqui</a> para se cadastrar.
    </p>

</div>